<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/mainBackground"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:id="@+id/tabs"
                app:tabTextColor="@color/black"
                app:tabMode="fixed"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/marginTop5ForLayouts"
                tools:visibility="visible"
                app:tabSelectedTextColor="@color/mainYellow"
                android:background="@color/yellowGray">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/mainYellow"
                    android:id="@+id/stock_tab_layout"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stock_tab"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#4F4D36"
                        android:layout_gravity="center"
                        android:text="@string/stockTake"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/counted_tab_layout"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/counted_tab"
                        android:textAlignment="center"
                        android:textColor="#4F4D36"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:text="Counted"/>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@color/mainBackground"
                android:paddingEnd="@dimen/padding_all"
                android:paddingStart="@dimen/padding_all"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:id="@+id/headerRel">

                <include
                    android:id="@+id/mainToolbar"
                    layout="@layout/toolbar_main_top"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mainToolbar"
                    tools:visibility="gone"
                    android:layout_toStartOf="@+id/filterImg" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/doubleSearchBar"
                    android:layout_below="@id/mainToolbar2"
                    android:layout_marginTop="@dimen/marginTop5ForLayouts"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/lin1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/rel3"
                            style="@style/relSearchMainEdi">

                            <EditText
                                android:id="@+id/locationCode"
                                style="@style/searchMainEdi"
                                android:layout_toStartOf="@+id/locationClearImg"
                                android:hint="Location" />

                            <ImageView
                                android:id="@+id/locationClearImg"
                                style="@style/imgClose" />


                        </RelativeLayout>



                        <RelativeLayout
                            android:id="@+id/rel5"
                            style="@style/relSearchMainEdi">

                            <EditText
                                android:id="@+id/productCode"
                                style="@style/searchMainEdi"
                                android:layout_toStartOf="@+id/productCodeImg"
                                android:hint="Product" />

                            <ImageView
                                android:id="@+id/productCodeImg"
                                style="@style/imgClose" />


                        </RelativeLayout>








                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/paddingTopBottomOptionsRel">

                        <RelativeLayout
                            android:id="@+id/relFilter"
                            style="@style/pickputRelRect"
                            android:background="@drawable/shape_rect_left_corner_just"
                            android:backgroundTint="@color/lowPink">

                            <ImageView
                                style="@style/pickputRectImg"
                                android:src="@drawable/png_search"
                                app:tint="@color/black" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relSetting"
                            style="@style/pickputRelRect"
                            android:background="@drawable/shape_rect_right_corner_just"
                            android:backgroundTint="@color/pink">

                            <ImageView
                                style="@style/pickputRectImg"
                                android:src="@drawable/ic__351911_arrows_ascending_down_sort_sorting_icon"
                                app:tint="@color/black" />


                        </RelativeLayout>



                    </LinearLayout>
                </LinearLayout>


                <include
                    android:id="@+id/mainToolbar2"
                    layout="@layout/toolbar_customer_top"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mainToolbar"
                    tools:visibility="gone"
                    android:layout_below="@id/mainToolbar"
                    android:layout_marginTop="@dimen/marginTop5ForLayouts" />

                <include
                    android:id="@+id/filterImg"
                    tools:visibility="gone"
                    layout="@layout/img_filter"/>

                <include
                    android:id="@+id/stockTakeItem"
                    layout="@layout/pattern_stock_taking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doubleSearchBar"
                    android:layout_marginTop="@dimen/marginTopRelInfoTv" />




                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stockTakeItem" >

                    <View
                        android:id="@+id/view1"
                        android:layout_width="@dimen/view_start_width"
                        android:layout_height="@dimen/view_height1"
                        android:layout_centerVertical="true"
                        android:background="@color/gray70" />

                    <TextView
                        android:id="@+id/itemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_start_icon_tv"
                        android:layout_marginTop="@dimen/margin_start_icon_tv"
                        android:layout_marginEnd="@dimen/margin_start_icon_tv"
                        android:layout_marginBottom="@dimen/margin_start_icon_tv"
                        android:layout_toEndOf="@+id/view1"
                        android:fontFamily="@font/medium"
                        android:text="@string/items"
                        android:textSize="@dimen/itemDetailReceive" />


                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height1"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/itemTitle"
                        android:background="@color/gray70" />


                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout

                android:paddingBottom="@dimen/padding_all"
                android:paddingEnd="@dimen/padding_all"
                android:paddingStart="@dimen/padding_all"
                android:clipToPadding="false"
                android:clipChildren="false"
                tools:background="@color/mainBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/insertLocationCount"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/pattern_stock_taking_location" />


                <TextView
                    android:id="@+id/insertLocationCount"
                    android:background="@drawable/shape_background_rect_white_6"
                    android:backgroundTint="@color/red"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/insert_location_count"
                    android:layout_width="@dimen/insertLocationCountWidth"
                    android:layout_height="@dimen/stockChangeHeight"
                    />


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/progressStyle"
                    android:background="@null"
                    android:padding="@dimen/paddingOfFragmentProgress"
                    tools:visibility="gone" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</layout>
