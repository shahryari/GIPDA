<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:elevation="@dimen/MediumElevation"
    android:background="@drawable/shape_background_rect_white_6"
    android:minHeight="@dimen/stockTakingDetailHeight"
    android:layout_marginBottom="@dimen/marginTop5ForLayouts">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/marginTop5ForLayouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/locationCode"
            style="@style/pattern_receieve_tv1"
            android:textColor="@color/progressYellow"
            tools:text="@string/a_38_26_03" />
        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/productTitle"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_150sdp"
                style="@style/pattern_receieve_tv1"
                android:text="-------" />

            <TextView
                android:id="@+id/goodSystemCode"
                style="@style/pattern_receieve_tv1"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:layout_width="@dimen/_150sdp"
                tools:text="@string/_093210081118" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/lineCountAll"
                app:layout_constraintBottom_toTopOf="@id/lineSave"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/lineDetail"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invTypeTitle"
                    style="@style/pattern_receieve_tv1"
                    android:text="--------" />

                <TextView
                    android:id="@+id/ownerCode"
                    style="@style/pattern_receieve_tv1"
                    tools:text='@string/ownerCode' />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/relCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/mainYellow">


                    <TextView
                        android:id="@+id/tv7"
                        style="@style/pattern_putaway_smallTv"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="@string/quantity"
                        android:layout_marginEnd="@dimen/margin_low_2"
                        android:layout_marginBottom="0dp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray70" />


                    <TextView
                        android:id="@+id/quantity"
                        style="@style/pattern_receieve_tv1"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="0dp"
                        android:layout_toEndOf="@+id/tv7"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/submit_tv_sizes"
                        tools:text="@string/_2" />



                </androidx.appcompat.widget.LinearLayoutCompat>




            </LinearLayout>
            <LinearLayout

                android:orientation="horizontal"
                android:id="@+id/lineSave"
                android:gravity="bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lineDetail"
                android:layout_gravity="bottom"
                android:padding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/change"
                    android:background="@drawable/shape_background_rect_white_6"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:fontFamily="@font/medium"
                    android:text="@string/more"
                    android:textSize="@dimen/pattern_putaway_detail_smallFont"
                    android:layout_width="@dimen/stockChangeWidth"
                    android:layout_height="@dimen/stockChangeHeight"
                    />

                <TextView
                    android:id="@+id/save"
                    android:background="@drawable/shape_background_rect_white_6"
                    android:backgroundTint="@color/mainYellow"
                    android:textColor="@color/white"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:fontFamily="@font/medium"
                    android:layout_marginStart="@dimen/marginTop5ForLayouts"
                    android:text="@string/save"
                    android:textSize="@dimen/pattern_putaway_detail_smallFont"
                    android:layout_width="@dimen/stockChangeWidth"
                    android:layout_height="@dimen/stockChangeHeight"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lineCountAll"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lineSave"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/marginTop5ForLayouts"
                    android:id="@+id/values1"
                    android:textColor="@color/black"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    tools:visibility="visible"
                    android:textSize="12sp"
                    android:id="@+id/count1Hint"
                    android:layout_marginBottom="@dimen/marginTop5ForLayouts"
                    android:text="Real inventory is 5"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/count"
                        android:layout_width="@dimen/stockTakingCountEdiWidth"
                        android:layout_height="@dimen/stockTakingCountEdiHeight"
                        android:gravity="center"
                        android:hint="@string/count1"
                        android:inputType="number"
                        android:fontFamily="@font/medium"
                        android:maxLength="4"
                        android:background="@drawable/background_stock_taking_detail_count"
                        android:maxLines="1"

                        />
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/stockTakingCountEdiHeight"
                        android:background="@drawable/shape_background_rect_white_6"
                        android:src="@drawable/baseline_add_24"
                        android:id="@+id/add1"
                        android:tint="@color/white"
                        android:layout_marginStart="@dimen/marginTop5ForLayouts"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:backgroundTint="@color/mainYellow"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop5ForLayouts"
                    android:id="@+id/values2"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/marginTop5ForLayouts"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <EditText

                        android:id="@+id/count2"
                        android:layout_width="@dimen/stockTakingCountEdiWidth"
                        android:layout_height="@dimen/stockTakingCountEdiHeight"
                        android:gravity="center"
                        android:enabled="false"
                        android:hint="@string/count_2"
                        android:backgroundTint="@color/gray70_alpha53"
                        android:inputType="number"
                        android:fontFamily="@font/medium"
                        android:maxLength="4"
                        android:background="@drawable/background_stock_taking_detail_count"
                        android:maxLines="1"

                        />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/stockTakingCountEdiHeight"
                        android:background="@drawable/shape_background_rect_white_6"
                        android:src="@drawable/baseline_add_24"
                        android:id="@+id/add2"
                        android:tint="@color/white"
                        android:layout_marginStart="@dimen/marginTop5ForLayouts"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:backgroundTint="@color/mainYellow"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/values3"
                    android:layout_marginTop="@dimen/marginTop5ForLayouts"

                    android:text=""/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="end"
                    android:id="@+id/lineCount3"
                    android:layout_marginTop="@dimen/marginTop5ForLayouts"
                    android:orientation="horizontal">

                    <EditText

                        android:id="@+id/count3"
                        android:layout_width="@dimen/stockTakingCountEdiWidth"
                        android:layout_height="@dimen/stockTakingCountEdiHeight"
                        android:gravity="center"
                        android:hint="@string/count_3"
                        android:inputType="number"
                        android:fontFamily="@font/medium"
                        android:maxLength="4"
                        android:background="@drawable/background_stock_taking_detail_count"
                        android:maxLines="1"

                        />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/stockTakingCountEdiHeight"
                        android:background="@drawable/shape_background_rect_white_6"
                        android:src="@drawable/baseline_add_24"
                        android:id="@+id/add3"
                        android:tint="@color/white"
                        android:layout_marginStart="@dimen/marginTop5ForLayouts"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:backgroundTint="@color/mainYellow"/>
                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>



    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        tools:visibility="visible" />








</RelativeLayout>
</layout>