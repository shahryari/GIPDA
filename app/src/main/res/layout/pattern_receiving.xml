<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_background_rect_white_6"
    android:layout_width="match_parent"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/edi_login_marginTop"
    android:id="@+id/rel0"
    android:elevation="@dimen/lowElevation"
    android:minHeight="@dimen/pattern_receive_height"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="@dimen/pattern_receive_info_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_pattern_receive">

        <TextView
            android:id="@+id/title1"
            style="@style/pattern_putaway_smallTv"
            android:layout_marginStart="@dimen/marginStartLocationTransfer"
            android:text="@string/recevieNumber" />


        <TextView
            android:id="@+id/recevieNumber"
            style="@style/pattern_receieve_tv1"
            tools:text="@string/tools_a220820_023535" />

        <TextView
            android:id="@+id/title2"
            style="@style/pattern_putaway_smallTv"
            android:layout_marginStart="@dimen/marginStartLocationTransfer"
            android:text="@string/containerNumber" />

        <TextView
            android:id="@+id/containerNumber"
            style="@style/pattern_receieve_tv1"
            tools:text="@string/tools_tdru4204745" />

        <TextView
            android:id="@+id/dateTitle"
            style="@style/pattern_putaway_smallTv"
            android:layout_marginStart="@dimen/marginStartLocationTransfer"
            android:text="@string/dockAssignTime" />


        <TextView
            android:id="@+id/date"
            style="@style/pattern_receieve_tv1"
            tools:text="@string/tools_10_08_2022_08_22" />

        <TextView
            android:id="@+id/CurrentStatusCodeTitle"
            style="@style/pattern_putaway_smallTv"
            android:layout_marginStart="@dimen/marginStartLocationTransfer"
            android:text="@string/currentstatuscode"
            android:visibility="gone"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/CurrentStatusCode"
            style="@style/pattern_receieve_tv1"
            android:visibility="gone"
            tools:text="@string/tools_10_08_2022_08_22"
            tools:visibility="visible" />

        <TextView
            style="@style/pattern_putaway_smallTv"
            android:layout_marginStart="@dimen/marginStartLocationTransfer"
            android:text="@string/carType" />

        <TextView
            android:id="@+id/type"
            style="@style/pattern_receieve_tv1"
            tools:text="@string/tools_benz" />

        <RelativeLayout
            android:layout_width="@dimen/pattern_receive_carNumber_width"
            android:layout_height="@dimen/pattern_receive_carNumber_height"
            android:background="@drawable/shape_background_rect_border_gray_solid_white">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="@dimen/width_carNumber_bluePart"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_background_rect_border_gray_solid_white_half">

                <ImageView
                    android:layout_width="@dimen/flag"
                    android:layout_height="@dimen/flag"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/marginTop_flag"
                    android:src="@drawable/png_iran" />

            </RelativeLayout>

            <TextView
                android:id="@+id/plaque"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/view1"
                android:layout_toEndOf="@+id/rel1"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/carNumber_font"
                tools:text="@string/tools_345_12" />

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/rel2"
                android:background="@color/gray70" />

            <LinearLayout
                android:id="@+id/rel2"
                android:layout_width="@dimen/carNumber_iranWidth"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="@dimen/marginTop_flag"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:text="@string/iran"
                    android:textColor="@color/gray70"
                    android:textSize="@dimen/iranSize" />

                <TextView
                    android:id="@+id/plaqueYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="@dimen/marginTop_flag"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/iranSize79"
                    tools:text="@string/tools_79" />


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_toEndOf="@+id/lin1"
        android:background="@color/mainBackground"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view"
        android:id="@+id/lin0"
        android:orientation="vertical"
        android:padding="@dimen/padding_pattern_receive">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/lineCustomerCount"
            android:visibility="gone"
            android:padding="@dimen/paddingTop_tv_as_button"
            android:background="@drawable/shape_rect_main_all"
            tools:visibility="visible"
            android:orientation="vertical">
            <TextView
                style="@style/pattern_putaway_smallTv"
                android:layout_gravity="center"
                android:text="@string/customerCount" />
            <TextView
                android:id="@+id/customerCount"
                style="@style/pattern_receieve_tv1"
                android:layout_gravity="center"
                android:textStyle="bold"
                tools:text="@string/tools_10_08_2022_08_22" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/pattern_receive_imgSize"
            android:layout_height="@dimen/pattern_receive_imgSize"
            android:layout_gravity="center|top"
            android:src="@drawable/png_profile" />


        <TextView
            android:id="@+id/driverFullName"
            style="@style/pattern_receieve_tv1"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:gravity="center"
            android:textColor="@color/black"
            tools:text="@string/tools_mohammad" />

        <TextView
            android:id="@+id/lastName"
            style="@style/pattern_receieve_tv1"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            tools:text="@string/tools_shahryari"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dockCode"
            style="@style/pattern_receieve_tv1"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            tools:text="@string/tools_gr01" />

        <TextView
            android:id="@+id/leftDock"
            style="@style/btnSubmitCansel"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            android:background="@drawable/shape_background_rect_gray_3"
            android:backgroundTint="@color/mainYellow"
            android:layout_marginEnd="0dp"
            android:text="@string/print" />

        <TextView
            android:id="@+id/remove"
            style="@style/btnSubmitCansel"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/marginTopRelInfoTv"
            tools:visibility="visible"
            android:gravity="center"
            android:background="@drawable/shape_background_rect_gray_3"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:layout_marginEnd="0dp"
            android:text="@string/remove" />



    </LinearLayout>


    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="@dimen/imgBarcodeSize"
        android:layout_height="@dimen/imgBarcodeSize"
        android:layout_centerInParent="true"
        android:alpha=".7"
        tools:visibility="visible"
        android:visibility="gone"
        android:src="@drawable/ic__054433_bx_check_shield_icon"
        app:tint="@color/red" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/paddingOfFragmentProgress"
        android:visibility="invisible"
        tools:visibility="visible" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_background_gray_half"
        android:backgroundTint="@color/yellowGray"
        android:id="@+id/qty_lay"
        android:visibility="gone"
        tools:visibility="gone"
        android:orientation="horizontal">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shape_background_gray_half"
            android:backgroundTint="@color/yellowGray"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/pattern_putaway_smallTv"
                android:text="@string/total"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/marginTopRelInfoTv"
                android:textColor="@color/black"
                />
            <TextView
                style="@style/pattern_putaway_MediumTv"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/marginMedium"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="9"
                android:id="@+id/total_tv"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/yellowGray"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/pattern_putaway_smallTv"
                android:text="@string/done"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/marginTopRelInfoTv"
                android:textColor="@color/black"
                />
            <TextView
                style="@style/pattern_putaway_MediumTv"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/marginMedium"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="9"
                android:id="@+id/done_tv"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/yellowGray"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/pattern_putaway_smallTv"
                android:text="@string/qty"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/marginTopRelInfoTv"
                android:textColor="@color/black"
                />
            <TextView
                style="@style/pattern_putaway_MediumTv"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/marginMedium"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="128"
                android:id="@+id/qty_tv"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/yellowGray"
            android:layout_margin="@dimen/margin_low_2"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                style="@style/pattern_putaway_smallTv"
                android:text="Done Qty"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/marginTopRelInfoTv"
                android:textColor="@color/black"
                />
            <TextView
                style="@style/pattern_putaway_MediumTv"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/marginMedium"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="9"
                android:id="@+id/done_qty_tv"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>
</layout>
