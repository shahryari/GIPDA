<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="@dimen/marginTop5ForLayouts"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/driverImg"
        android:layout_width="@dimen/driverSize"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/driverSize"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/driverTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/driverImg"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/dirverTvSize"
        tools:text="shahryari" />

    <ImageView
        android:id="@+id/checkImg"
        android:layout_width="@dimen/driverConfirmIcon"
        android:layout_height="@dimen/driverConfirmIcon"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/driverTv"
        android:src="@drawable/ic_baseline_check_24"
        android:visibility="invisible"
        app:tint="@color/green"
        tools:visibility="visible" />



</RelativeLayout>

</layout>
