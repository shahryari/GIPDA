<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:background="@color/mainBackground"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:id="@+id/tabs"
            app:tabTextColor="@color/black"
            app:tabMode="fixed"
            android:visibility="gone"
            tools:visibility="visible"
            app:tabSelectedTextColor="@color/mainYellow"
            android:background="@color/yellowGray">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/mainYellow"
                android:id="@+id/open_tab_layout"
                android:gravity="center"
                android:layout_weight="1">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/open_tab"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#4F4D36"
                    android:layout_gravity="center"
                    android:text="@string/open"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/close_tab_layout"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/close_tab"
                    android:textAlignment="center"
                    android:textColor="#4F4D36"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:text="@string/close"/>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_all"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/marginTopRelInfoTv"
            android:paddingStart="@dimen/padding_all">

            <include
                android:id="@+id/mainToolbar"
                layout="@layout/toolbar_main_top"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mainToolbar"
                android:layout_marginTop="@dimen/marginTop5ForLayouts"
                android:layout_toStartOf="@+id/filterImg" />

            <include
                android:id="@+id/filterImg"
                layout="@layout/img_filter" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel1"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginHorizontal="@dimen/padding_all"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rel3"
                style="@style/relSearchMainEdi">

                <EditText
                    android:id="@+id/locationCode"
                    style="@style/searchMainEdi"
                    android:layout_toStartOf="@+id/locationClearImg"
                    android:hint="@string/location_code" />

                <ImageView
                    android:id="@+id/locationClearImg"
                    style="@style/imgClose" />


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rel5"
                style="@style/relSearchMainEdi">

                <EditText
                    android:id="@+id/productCode"
                    style="@style/searchMainEdi"
                    android:layout_toStartOf="@+id/productCodeImg"
                    android:hint="Product Name" />

                <ImageView
                    android:id="@+id/productCodeImg"
                    style="@style/imgClose" />


            </RelativeLayout>








        </LinearLayout>


        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin1"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/padding_all"
            tools:visibility="visible"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/paddingTopBottomOptionsRel">

            <RelativeLayout
                android:id="@+id/relFilter"
                style="@style/pickputRelRect"
                android:background="@drawable/shape_rect_left_corner_just"
                android:backgroundTint="@color/lowPink">

                <ImageView
                    style="@style/pickputRectImg"
                    android:src="@drawable/png_search"
                    app:tint="@color/black" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relSetting"
                style="@style/pickputRelRect"
                android:background="@drawable/shape_rect_right_corner_just"
                android:backgroundTint="@color/pink">

                <ImageView
                    style="@style/pickputRectImg"
                    android:src="@drawable/ic__351904_filter_filtering_filters_funnel_sort_icon"
                    app:tint="@color/black" />


            </RelativeLayout>



        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel0"
            android:paddingBottom="@dimen/padding_all"
            android:paddingEnd="@dimen/padding_all"
            android:paddingStart="@dimen/padding_all"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/marginTopRelInfoTv"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/pattern_receiving"
                />



            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/progressStyle"
                android:background="@null"
                android:padding="@dimen/paddingOfFragmentProgress"
                tools:visibility="gone" />


        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</layout>
