<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainToolbar"
        android:layout_marginTop="@dimen/marginTop5ForLayouts"
        android:background="@drawable/shape_background_rect_white_6"
        android:paddingStart="@dimen/marginTop5ForLayouts"
        android:paddingEnd="@dimen/marginTop5ForLayouts">

        <RelativeLayout
            android:id="@+id/rel4"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/recevieNumber"
                style="@style/pattern_receieve_tv1"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/pattern_cargo_tablet_fontSize"
                tools:text="@string/tools_a220820_023535" />

            <TextView
                android:id="@+id/containerNumber"
                style="@style/pattern_receieve_tv1"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/marginTopRelInfoTv"
                android:layout_toEndOf="@+id/recevieNumber"
                android:textSize="@dimen/pattern_cargo_tablet_fontSize"
                tools:text="@string/tools_tdru4204745" />

            <TextView
                android:id="@+id/cartType"
                style="@style/pattern_receieve_tv1"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/marginMedium"
                android:layout_toEndOf="@+id/containerNumber"
                android:textSize="@dimen/pattern_cargo_tablet_fontSize"
                tools:text="@string/tools_benz" />

            <TextView
                android:id="@+id/driverFullName"
                style="@style/pattern_receieve_tv1"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/marginTop5ForLayouts"
                android:layout_toStartOf="@+id/date"
                android:layout_toEndOf="@+id/cartType"
                android:gravity="center"
                android:textSize="@dimen/pattern_cargo_tablet_fontSize"
                tools:text="@string/tools_shahryari" />

            <TextView
                android:id="@+id/date"
                style="@style/pattern_receieve_tv1"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/marginMedium"
                android:layout_marginEnd="@dimen/marginMedium"
                android:layout_toStartOf="@+id/relPlaque"
                android:textSize="@dimen/pattern_cargo_tablet_fontSize"
                tools:text="@string/_10_08_2022_08_22" />

            <RelativeLayout
                android:id="@+id/relPlaque"
                android:layout_width="@dimen/pattern_receive_carNumber_width"
                android:layout_height="@dimen/pattern_receive_carNumber_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/marginTop5ForLayouts"
                android:background="@drawable/shape_background_rect_border_gray_solid_white">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="@dimen/width_carNumber_bluePart"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/shape_background_rect_border_gray_solid_white_half">

                    <ImageView
                        android:layout_width="@dimen/flag"
                        android:layout_height="@dimen/flag"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/marginTop_flag"
                        android:src="@drawable/png_iran" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/plaque"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/view1"
                    android:layout_toEndOf="@+id/rel1"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/carNumber_font"
                    tools:text="@string/tools_345_12" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/rel2"
                    android:background="@color/gray70" />

                <LinearLayout
                    android:id="@+id/rel2"
                    android:layout_width="@dimen/carNumber_iranWidth"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="@dimen/marginTop_flag"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:text="@string/iran"
                        android:textColor="@color/gray70"
                        android:textSize="@dimen/iranSize" />

                    <TextView
                        android:id="@+id/plaqueYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="@dimen/marginTop_flag"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/iranSize79"
                        tools:text="@string/tools_79" />


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relAssignFinish"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel4">

            <TextView
                android:id="@+id/assign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:background="@drawable/shape_background_rect_white_6"
                android:backgroundTint="@color/mainYellow"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="@dimen/paddingEndEdi"
                android:paddingTop="@dimen/marginTop5ForLayouts"
                android:paddingEnd="@dimen/paddingEndEdi"
                android:paddingBottom="@dimen/marginTop5ForLayouts"
                android:text="@string/Assign"
                android:textColor="@color/white"
                android:textSize="@dimen/assignSize" />


            <TextView
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginTop5ForLayouts"
                android:layout_toEndOf="@+id/assign"
                android:background="@drawable/shape_background_rect_white_6"
                android:backgroundTint="@color/red"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="@dimen/paddingEndEdi"
                android:paddingTop="@dimen/marginTop5ForLayouts"
                android:paddingEnd="@dimen/paddingEndEdi"
                android:paddingBottom="@dimen/marginTop5ForLayouts"
                android:text="@string/finish"
                android:textColor="@color/white"
                android:textSize="@dimen/assignSize" />


        </RelativeLayout>


    </RelativeLayout>
</layout>
