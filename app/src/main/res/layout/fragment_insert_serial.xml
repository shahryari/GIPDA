<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:id="@+id/rel0"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:background="@color/mainBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/printTv"
        android:paddingStart="@dimen/padding_all"
        android:paddingTop="@dimen/padding_all"
        android:paddingEnd="@dimen/padding_all">


        <include
            android:id="@+id/wareHouse"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/marginFieldTop"
            layout="@layout/layout_spinner_field"/>


        <include
            android:id="@+id/owner"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/marginFieldTop"
            layout="@layout/layout_spinner_field"/>


        <include
            android:id="@+id/productTitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/minus_margin_fieldWhite"
            android:layout_marginEnd="@dimen/minus_margin_fieldWhite"
            android:layout_marginTop="@dimen/marginFieldTop"
            layout="@layout/layout_white_field"/>


        <include
            android:id="@+id/inventoryType"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/marginFieldTop"
            layout="@layout/layout_spinner_field"/>

        <include
            android:id="@+id/serials"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/minus_margin_fieldWhite"
            android:layout_marginEnd="@dimen/minus_margin_fieldWhite"
            layout="@layout/layout_white_field"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add"
                style="@style/btnSubmitCansel"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_background_rect_gray_3"
                android:backgroundTint="@color/mainYellow"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/marginTop5ForLayouts"
                android:text="@string/add" />



        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/serials_height_header"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_background_rect_border_half_top_solid_yellow"
                android:paddingStart="@dimen/padding_headers_startEnd"
                android:paddingTop="@dimen/padding_headers_topBottom"
                android:paddingEnd="@dimen/padding_headers_startEnd"
                android:paddingBottom="@dimen/padding_headers_topBottom">

                <TextView
                    style="@style/headers_title"
                    android:layout_centerVertical="true"
                    android:text="@string/serials" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relReceive"
                style="@style/searchSerialRel"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_below="@id/rel2">

                <EditText
                    android:id="@+id/searchEdi"
                    style="@style/searchSerialEdi"
                    android:layout_toStartOf="@+id/clearImg"
                    android:backgroundTint="@color/mainBackground" />


                <ImageView
                    android:id="@+id/clearImg"
                    style="@style/imgClose"
                    android:layout_alignParentEnd="false"
                    android:layout_marginEnd="@dimen/marginTop5ForLayouts"
                    android:layout_toStartOf="@+id/searchIcon" />

                <ImageView
                    android:id="@+id/searchIcon"
                    style="@style/searchSerialIcon" />


            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_below="@+id/relReceive"
                android:layout_width="match_parent"
                android:layout_alignStart="@id/relReceive"
                android:layout_alignEnd="@id/relReceive"
                android:layout_height="@dimen/view_height1"
                android:background="@color/gray70_alpha70" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/serialsCount"
                android:layout_below="@id/view1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/pattern_serial" />

            <TextView
                android:id="@+id/serialsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/relReceive"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/padding_headers_startEnd"
                android:layout_marginTop="@dimen/marginTop5ForLayouts"
                android:layout_marginEnd="@dimen/padding_headers_startEnd"
                android:layout_marginBottom="@dimen/marginTop5ForLayouts"
                android:fontFamily="@font/medium"
                android:text="@string/tools_scannedItems"
                android:textColor="@color/gray70"
                android:textSize="@dimen/serial_serachFont" />



        </RelativeLayout>



    </LinearLayout>

    <include
        android:id="@+id/printTv"
        layout="@layout/layout_print_tv" />

    <ProgressBar
        android:id="@+id/progress"
        android:padding="@dimen/paddingOfFragmentProgress"
        style="@style/progressStyle"/>


</RelativeLayout>


</layout>
