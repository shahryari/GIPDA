<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/edi_login_corner"
        android:elevation="@dimen/MediumElevation"
        android:background="@drawable/shape_background_rect_border_gray_solid_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_serial_height">


        <RelativeLayout
            android:background="@drawable/shape_background_rect_border_gray_solid_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_serial_height">


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/serial_scan_top_bar_height"
                android:layout_marginStart="@dimen/view_height1"
                android:layout_marginTop="@dimen/view_height1"
                android:layout_marginEnd="@dimen/view_height1"
                android:layout_marginBottom="@dimen/view_height1"
                android:background="@drawable/shape_background_rect_border_half_top_solid_yellow"
                android:padding="@dimen/padding_headers">

                <TextView
                    style="@style/headers_title"
                    android:text="@string/serials" />


                <ImageView
                    android:id="@+id/closeImg"
                    style="@style/imgClose1" />


            </RelativeLayout>






            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/lineTotal"
                android:layout_below="@id/rel1"
                android:layout_marginStart="@dimen/edi_login_marginTop"
                android:layout_marginEnd="@dimen/edi_login_marginTop"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/pattern_serial" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lineTotal"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_above="@id/rel4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_headers_startEnd"
                    android:layout_marginTop="@dimen/marginTop5ForLayouts"
                    android:fontFamily="@font/medium"
                    android:text="@string/tools_total"
                    android:textColor="@color/gray70"
                    android:textSize="@dimen/serial_serachFont" />
                <TextView
                    android:id="@+id/serialsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_headers_startEnd"
                    android:layout_marginTop="@dimen/marginTop5ForLayouts"
                    android:layout_marginEnd="@dimen/padding_headers_startEnd"
                    android:fontFamily="@font/bold"
                    android:text="@string/_0"
                    android:textColor="@color/gray70"
                    android:textSize="@dimen/serial_serachFont" />


            </androidx.appcompat.widget.LinearLayoutCompat>


            <include
                android:id="@+id/rel4"
                layout="@layout/layout_cansel_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/canselConfirmRel"
                android:layout_alignParentBottom="true" />

            <ProgressBar
                android:id="@+id/progress"
                style="@style/progressStyle"
                android:padding="@dimen/paddingOfDialogProgress"
                tools:visibility="gone" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</layout>
