<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:clipToPadding="false"
        android:clipChildren="false"
        tools:background="@color/mainBackground"
        android:paddingBottom="@dimen/padding_all"
        android:paddingEnd="@dimen/padding_all"
        android:paddingStart="@dimen/padding_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include
            android:id="@+id/mainToolbar"
            layout="@layout/toolbar_main_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mainToolbar"
            android:layout_toStartOf="@+id/filterImg" />


        <include
            android:id="@+id/mainToolbar2"
            layout="@layout/toolbar_customer_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mainToolbar"
            android:layout_below="@id/mainToolbar"
            android:layout_marginTop="@dimen/marginTop5ForLayouts" />

        <include
            android:id="@+id/filterImg"
            layout="@layout/img_filter"/>

        <include
            android:id="@+id/receiveItem"
            layout="@layout/pattern_receiving_detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainToolbar2"
            android:layout_marginTop="@dimen/marginTopRelInfoTv" />



        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receiveItem" >

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/view_start_width"
                android:layout_height="@dimen/view_height1"
                android:layout_centerVertical="true"
                android:background="@color/gray70" />

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_icon_tv"
                android:layout_marginTop="@dimen/margin_start_icon_tv"
                android:layout_marginEnd="@dimen/margin_start_icon_tv"
                android:layout_marginBottom="@dimen/margin_start_icon_tv"
                android:layout_toEndOf="@+id/view1"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:text="@string/items"
                android:textSize="@dimen/itemDetailReceive" />


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height1"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/itemTitle"
                android:background="@color/gray70" />


        </RelativeLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/progressStyle"
            android:background="@null"
            android:padding="@dimen/paddingOfFragmentProgress"
            tools:visibility="gone" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rel1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/pattern_receiving_detail_info" />

    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</layout>
