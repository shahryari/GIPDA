<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:minHeight="@dimen/palletHeight"
        android:layout_margin="@dimen/marginTop5ForLayouts"
        android:elevation="@dimen/MediumElevation"
        android:background="@drawable/shape_background_rect_white_6"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linGen1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:minHeight="@dimen/palletHeight"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    style="@style/pattern_putaway_smallTv"
                    android:layout_marginStart="@dimen/marginStartLocationTransfer"
                    android:text="@string/productTitle" />


                <TextView
                    android:id="@+id/productTitle"
                    style="@style/pattern_receieve_tv1"
                    tools:text="@string/tools_a220820_023535" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin2"
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    style="@style/pattern_putaway_smallTv"
                    android:layout_marginStart="@dimen/marginStartLocationTransfer"
                    android:layout_marginTop="0dp"
                    android:text="@string/product_code" />


                <TextView
                    android:id="@+id/productCode"
                    style="@style/pattern_receieve_tv1"
                    tools:text="@string/tools_a220820_023535" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linGen2"
            android:layout_below="@id/linGen1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:minHeight="@dimen/palletHeight"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    style="@style/pattern_putaway_smallTv"
                    android:layout_marginStart="@dimen/marginStartLocationTransfer"
                    android:text="@string/invType" />


                <TextView
                    android:id="@+id/invType"
                    style="@style/pattern_receieve_tv1"
                    tools:text="@string/tools_a220820_023535" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    style="@style/pattern_putaway_smallTv"
                    android:layout_marginStart="@dimen/marginStartLocationTransfer"
                    android:layout_marginTop="0dp"
                    android:text="@string/ownerCode" />


                <TextView
                    android:id="@+id/ownerCode"
                    style="@style/pattern_receieve_tv1"
                    tools:text="@string/tools_a220820_023535" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linGen3"
            android:layout_below="@id/linGen2"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:minHeight="@dimen/palletHeight"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    style="@style/pattern_putaway_smallTv"
                    android:layout_marginStart="@dimen/marginStartLocationTransfer"
                    android:text="@string/realInventory" />


                <TextView
                    android:id="@+id/realinventory"
                    style="@style/pattern_receieve_tv1"
                    tools:text="6" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    style="@style/pattern_putaway_smallTv"
                    android:layout_marginStart="@dimen/marginStartLocationTransfer"
                    android:layout_marginTop="0dp"
                    android:text="@string/awailableInventory" />


                <TextView
                    android:id="@+id/availableinventory"
                    style="@style/pattern_receieve_tv1"
                    tools:text="0" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>








</layout>
