<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@drawable/shape_background_rect_white_6"
        android:layout_width="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginBottom="@dimen/edi_login_marginTop"
        android:id="@+id/rel0"
        android:elevation="@dimen/lowElevation"
        android:minHeight="@dimen/pattern_cargo_detail_height"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="@dimen/pattern_receive_info_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_pattern_receive">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title1"
                        style="@style/pattern_putaway_smallTv"
                        android:layout_marginStart="@dimen/marginStartLocationTransfer"
                        android:text="@string/owner" />


                    <TextView
                        android:id="@+id/ownerCode"
                        style="@style/pattern_receieve_tv1"
                        tools:text="@string/gin" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_low_2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/pattern_putaway_smallTv"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/marginStartLocationTransfer"
                        android:text="@string/invType" />


                    <TextView
                        android:id="@+id/invType"
                        style="@style/pattern_receieve_tv1"
                        android:layout_gravity="center"
                        tools:text="@string/tools_GoodSet" />

                </LinearLayout>


            </RelativeLayout>


            <TextView
                style="@style/pattern_putaway_smallTv"
                android:layout_marginStart="@dimen/marginStartLocationTransfer"
                android:text="@string/productTitle" />

            <TextView
                android:id="@+id/productTitle"
                style="@style/pattern_receieve_tv1"
                tools:text="@string/tools_tdru4204745" />

            <TextView
                style="@style/pattern_putaway_smallTv"
                android:layout_marginStart="@dimen/marginStartLocationTransfer"
                android:text="@string/product_code" />


            <TextView
                android:id="@+id/productCode"
                style="@style/pattern_receieve_tv1"
                tools:text="@string/tools_10_08_2022_08_22" />

            <TextView
                style="@style/pattern_putaway_smallTv"
                android:layout_marginStart="@dimen/marginStartLocationTransfer"
                android:text="@string/hasPriority" />


            <TextView
                android:id="@+id/hasPriority"
                style="@style/pattern_receieve_tv1"
                tools:text="true" />



        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_toEndOf="@+id/lin1"
            android:background="@color/mainBackground"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/view"
            android:orientation="vertical"
            android:padding="@dimen/padding_pattern_receive">

            <TextView
                android:id="@+id/customerLable"
                style="@style/pattern_putaway_smallTv"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/marginStartLocationTransfer"
                android:layout_marginTop="0dp"
                android:text="@string/customerFullName" />

            <TextView
                android:id="@+id/customerFullName"
                style="@style/pattern_receieve_tv1"
                android:layout_below="@id/customerLable"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/black"
                tools:text="@string/tools_mohammad" />


            <RelativeLayout
                android:id="@+id/relCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customerFullName"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/marginTop5ForLayouts"
                android:padding="@dimen/paddingLow2">


                <TextView
                    android:id="@+id/tv7"
                    style="@style/pattern_receieve_tv1"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/count"
                    android:layout_marginBottom="0dp"
                    android:textColor="@color/gray70" />


                <TextView
                    android:id="@+id/count"
                    style="@style/pattern_receieve_tv1"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@+id/tv7"
                    android:textColor="@color/mainYellow"
                    android:textSize="@dimen/submit_tv_sizes"
                    tools:text="@string/_2" />


            </RelativeLayout>

            <TextView
                android:id="@+id/locationCodeTv"
                style="@style/pattern_putaway_smallTv"
                android:layout_below="@+id/relCount"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/marginStartLocationTransfer"
                android:layout_marginTop="0dp"
                android:text="@string/locationCode" />


            <TextView
                android:id="@+id/locationCode"
                style="@style/pattern_receieve_tv1"
                android:layout_below="@+id/locationCodeTv"
                android:layout_centerHorizontal="true"
                tools:text="@string/location_code" />

            <TextView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/locationCode"
                android:layout_gravity="end"
                tools:visibility="visible"
                android:visibility="gone"
                android:background="@drawable/shape_background_rect_white_6"
                android:backgroundTint="@color/green"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="@dimen/paddingEndEdi"
                android:paddingTop="@dimen/marginTop5ForLayouts"
                android:paddingEnd="@dimen/paddingEndEdi"
                android:paddingBottom="@dimen/marginTop5ForLayouts"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/assignSize" />

            <TextView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationCode"
                android:layout_centerHorizontal="true"
                android:layout_gravity="end"
                android:background="@drawable/shape_background_rect_white_6"
                android:backgroundTint="@color/red"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="@dimen/paddingEndEdi"
                android:paddingTop="@dimen/marginTop5ForLayouts"
                android:paddingEnd="@dimen/paddingEndEdi"
                android:paddingBottom="@dimen/marginTop5ForLayouts"
                android:text="@string/remove"
                android:textColor="@color/white"
                android:textSize="@dimen/assignSize"
                android:visibility="gone"
                tools:visibility="visible" />



        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:padding="@dimen/paddingOFSheetProgress"
            android:layout_height="@dimen/_160sdp"
            android:visibility="gone"
            tools:visibility="visible" />


    </RelativeLayout>
</layout>
