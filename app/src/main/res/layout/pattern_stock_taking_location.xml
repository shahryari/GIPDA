<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="@dimen/MediumElevation"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_rect_white_6"
    android:minHeight="@dimen/stockTakingDetailHeight"
    android:layout_marginBottom="@dimen/marginTop5ForLayouts">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/marginTop5ForLayouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/locationCode"
            style="@style/pattern_receieve_tv1"
            android:textColor="@color/progressYellow"
            tools:text="@string/a_38_26_03" />
        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/productTitle"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_150sdp"
                style="@style/pattern_receieve_tv1"
                android:text="-------" />

            <TextView
                android:id="@+id/goodSystemCode"
                style="@style/pattern_receieve_tv1"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:layout_width="@dimen/_150sdp"
                tools:text="@string/_093210081118" />

        </RelativeLayout>
        <TextView
            android:id="@+id/invTypeTitle"
            style="@style/pattern_receieve_tv1"
            android:text="--------" />


        <TextView
            android:id="@+id/ownerCode"
            style="@style/pattern_receieve_tv1"
            tools:text='@string/ownerCode' />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/change"
                android:background="@drawable/shape_background_rect_white_6"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:fontFamily="@font/medium"
                android:text="@string/more"
                android:textSize="@dimen/pattern_putaway_detail_smallFont"
                android:layout_width="@dimen/stockChangeWidth"
                android:layout_height="@dimen/stockChangeHeight"
                />

            <TextView
                android:id="@+id/save"
                android:background="@drawable/shape_background_rect_white_6"
                android:backgroundTint="@color/mainYellow"
                android:textColor="@color/white"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:fontFamily="@font/medium"
                android:layout_marginStart="@dimen/marginTop5ForLayouts"
                android:text="@string/save"
                android:textSize="@dimen/pattern_putaway_detail_smallFont"
                android:layout_width="@dimen/stockChangeWidth"
                android:layout_height="@dimen/stockChangeHeight"
                />
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/count"
            android:layout_width="@dimen/stockTakingCountEdiWidth"
            android:layout_height="@dimen/stockTakingCountEdiHeight"
            android:gravity="center"
            android:hint="@string/count"
            android:inputType="number"
            android:layout_marginBottom="@dimen/marginTop5ForLayouts"
            android:fontFamily="@font/medium"
            android:maxLength="4"
            android:background="@drawable/background_stock_taking_detail_count"
            android:maxLines="1"

            />

        <EditText
            android:id="@+id/count2"
            android:layout_width="@dimen/stockTakingCountEdiWidth"
            android:layout_height="@dimen/stockTakingCountEdiHeight"
            android:gravity="center"
            android:enabled="false"
            android:hint="@string/count"
            android:backgroundTint="@color/gray70_alpha53"
            android:inputType="number"
            android:fontFamily="@font/medium"
            android:maxLength="4"
            android:background="@drawable/background_stock_taking_detail_count"
            android:maxLines="1"

            />


    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        tools:visibility="visible" />








</RelativeLayout>
</layout>