<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="@color/mainBackground"
    tools:context=".ui.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/relForSnack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainToolbar"
            android:layout_alignParentTop="true"
            android:paddingStart="@dimen/padding_all"
            android:paddingEnd="@dimen/padding_all">

            <ImageView
                android:id="@+id/menuImg"
                style="@style/menu_img" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_start_icon_tv"
                android:layout_toEndOf="@+id/menuImg"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:text="@string/receiving"
                android:textSize="@dimen/mainToolbarTvSize" />

            <TextView
                android:id="@+id/shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/backImg"
                android:fontFamily="@font/medium"
                android:visibility="invisible"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/cargoDetail"
                android:textColor="@color/black"
                android:textSize="@dimen/mainToolbarTvSize" />


            <ImageView
                android:id="@+id/backImg"
                android:layout_width="@dimen/back_img_login"
                android:layout_height="@dimen/back_img_login"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:foreground="?attr/selectableItemBackground"
                android:rotation="180"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        </RelativeLayout>

        <fragment
            android:id="@+id/navHostFragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/summaryTv"
            android:layout_below="@+id/rel1"
            app:defaultNavHost="true"
            app:navGraph="@navigation/main_nav" />

        <TextView
            android:id="@+id/summaryTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_summary"
            android:layout_alignParentBottom="true"
            android:background="@color/yellowGray"
            android:elevation="@dimen/lowElevation"
            android:gravity="center"
            android:paddingStart="@dimen/margin_start_icon_tv"
            android:paddingEnd="@dimen/margin_start_icon_tv"
            android:textColor="@color/black"
            android:textSize="@dimen/belowTitleFontSize"
            android:visibility="gone"
            tools:text="@string/tools_you_have_3_trcuk_to_receive"
            tools:visibility="visible" />



    </RelativeLayout>





    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_gravity="start"
        app:itemTextColor="@color/black"
        android:fitsSystemWindows="true"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="match_parent">


        <include
            android:id="@+id/drawerLayout"
            layout="@layout/layout_drawer"/>


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
</layout>
