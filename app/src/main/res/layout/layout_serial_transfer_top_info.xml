<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:id="@+id/rel1"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/paddingSerialInfoLayout"
                android:paddingEnd="@dimen/paddingSerialInfoLayout">


                <TextView
                    android:id="@+id/tv1"
                    style="@style/pattern_putaway_smallTv"
                    android:layout_marginStart="@dimen/marginStartLocationTransfer"
                    android:text="@string/product_title" />

                <TextView
                    android:id="@+id/productTitle"
                    style="@style/pattern_receieve_tv1"
                    android:text="@string/tools_Panel_HV36MNQ1" />


            </LinearLayout>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/paddingSerialInfoLayout"
                android:paddingEnd="@dimen/paddingSerialInfoLayout">


                <TextView
                    android:id="@+id/tv2"
                    style="@style/pattern_putaway_smallTv"
                    android:layout_marginStart="@dimen/marginStartLocationTransfer"
                    android:text="@string/sourceLocation" />

                <TextView
                    android:id="@+id/locationCode"
                    style="@style/pattern_receieve_tv1"
                    android:text="@string/tools_Panel_HV36MNQ1" />


            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_marginTop="@dimen/marginTop5ForLayouts"
            android:layout_below="@id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/locationDestiny"
                style="@style/ediForSmallDialog"
                android:layout_centerVertical="true"
                android:layout_marginBottom="0dp"
                android:gravity="start|center"
                android:hint="@string/destinationLocation" />

            <ImageView
                android:id="@+id/clearImgLocation"
                style="@style/imgClose"
                android:layout_marginEnd="@dimen/clearImgMarginEnd"
                android:elevation="@dimen/clearImgElevation" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel2">


            <EditText
                android:id="@+id/quantity"
                style="@style/ediForSmallDialog"
                android:layout_marginTop="@dimen/marginTop5ForLayouts"
                android:hint="@string/Quantity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="number" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/marginTop5ForLayouts"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/lineEditIcon"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:id="@+id/clearImg"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:elevation="@dimen/clearImgElevation"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_layer1"/>
                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:elevation="@dimen/clearImgElevation"
                    android:src="@drawable/scan_barcode"
                    android:id="@+id/scan_barcode"

                    app:tint="@color/darkBlue"/>
            </androidx.appcompat.widget.LinearLayoutCompat>




        </androidx.constraintlayout.widget.ConstraintLayout>







    </RelativeLayout>
</layout>
