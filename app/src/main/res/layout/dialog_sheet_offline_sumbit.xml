<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheetAlertDenyConfirm">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/mainBackground"
            android:layout_height="@dimen/sheetAlertDenyConfirm">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/serial_scan_top_bar_height"
                android:background="@color/gray91"
                android:padding="@dimen/padding_headers">

                <TextView
                    android:id="@+id/title"
                    style="@style/headers_title"
                    android:text="@string/serial_scan_confirm" />


                <ImageView
                    android:id="@+id/closeImg"
                    style="@style/imgClose1" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_below="@+id/rel1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  >

                <EditText
                    android:id="@+id/countEdi"
                    style="@style/ediForSmallDialog"
                    android:hint="@string/count"
                    android:inputType="number" />

                <ImageView
                    android:id="@+id/clearImg"
                    style="@style/imgClose"
                    android:layout_marginEnd="@dimen/clearImgMarginEnd"
                    android:elevation="@dimen/clearImgElevation" />

            </RelativeLayout>

            <EditText
                android:id="@+id/fileName"
                style="@style/ediForUnitEdi"
                android:layout_width="match_parent"
                android:layout_below="@+id/rel2"
                android:layout_marginTop="@dimen/marginTop5ForLayouts"
                android:layout_marginEnd="@dimen/marginTop5ForLayouts"
                android:hint="@string/fileName" />

            <include
                android:id="@+id/okCanselBtn"
                layout="@layout/layout_cansel_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/msgTv"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/marginTop5ForLayouts" />

            <ProgressBar
                android:id="@+id/progress"
                style="@style/progressStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/paddingOFSheetProgress"
                tools:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</layout>
