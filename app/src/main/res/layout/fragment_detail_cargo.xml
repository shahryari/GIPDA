<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            tools:background="@color/mainBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:paddingBottom="@dimen/padding_all"
                android:paddingEnd="@dimen/padding_all"
                android:paddingStart="@dimen/padding_all"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:id="@+id/relHeader"
                android:backgroundTint="@color/mainBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/mainToolbar"
                    layout="@layout/toolbar_main_top"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mainToolbar"
                    android:layout_toStartOf="@+id/filterImg" />

                <include
                    android:id="@+id/filterImg"
                    layout="@layout/img_filter"/>

                <RelativeLayout
                    android:id="@+id/rel2"

                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mainToolbar"
                    android:layout_below="@id/mainToolbar"
                    android:layout_marginTop="@dimen/marginTop5ForLayouts"
                    android:visibility="gone"
                    tools:visibility="visible"
                    style="@style/relSearchMainEdi">



                    <EditText
                        android:id="@+id/searchEdi"
                        style="@style/searchMainEdi"
                        android:clickable="true"
                        android:focusable="false"
                        android:hint="@string/location_code"
                        android:layout_toStartOf="@+id/clearImg"
                        />

                    <ImageView
                        android:id="@+id/clearImg"
                        android:clickable="true"
                        android:focusable="true"
                        style="@style/imgClose" />
                </RelativeLayout>



                <include
                    android:id="@+id/receiveItem"
                    layout="@layout/pattern_receiving_detail_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel2"
                    android:layout_marginTop="@dimen/marginTopRelInfoTv" />
                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receiveItem" >

                    <View
                        android:id="@+id/view1"
                        android:layout_width="@dimen/view_start_width"
                        android:layout_height="@dimen/view_height1"
                        android:layout_centerVertical="true"
                        android:background="@color/gray70" />

                    <TextView
                        android:id="@+id/itemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_start_icon_tv"
                        android:layout_marginTop="@dimen/margin_start_icon_tv"
                        android:layout_marginEnd="@dimen/margin_start_icon_tv"
                        android:layout_marginBottom="@dimen/margin_start_icon_tv"
                        android:layout_toEndOf="@+id/view1"
                        android:fontFamily="@font/medium"
                        android:text="@string/items"
                        android:textSize="@dimen/itemDetailReceive" />


                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height1"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/itemTitle"
                        android:background="@color/gray70" />


                </RelativeLayout>

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/padding_all"
                android:paddingEnd="@dimen/padding_all"
                android:paddingStart="@dimen/padding_all"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_below="@id/relHeader"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/pattern_cargo_detail" />


            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/progressStyle"
                android:background="@null"
                android:padding="@dimen/paddingOfFragmentProgress"
                tools:visibility="gone" />

        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</layout>
