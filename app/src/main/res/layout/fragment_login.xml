<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_all"
    tools:background="@color/mainBackground"
    tools:backgroundTint="@color/tools_backgroundTint">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightOfLoginToolbar"
        android:paddingStart="@dimen/padding_rel_loginToolbar"
        android:paddingEnd="@dimen/padding_rel_loginToolbar">

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="@dimen/back_img_login"
            android:layout_height="@dimen/back_img_login"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/loginTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backImg"
            android:layout_alignStart="@id/backImg"
            android:fontFamily="@font/medium"
            android:text="@string/login"
            android:textColor="@color/grayB4"
            android:textSize="@dimen/loginTitleSize" />

        <TextView
            android:id="@+id/appDescriptionTv"
            style="@style/desktop_tv"
            android:layout_below="@+id/loginTitleTv"
            android:layout_alignStart="@id/backImg"
            android:text="@string/appDesc" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clipToPadding="false"
        android:padding="@dimen/padding_rel_login">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edi_login_height"
            android:background="@drawable/shape_background_rect_white_6"
            android:elevation="@dimen/edi_login_elevation"
            android:fontFamily="@font/medium"
            android:hint="@string/username"
            android:inputType="text|textNoSuggestions"
            android:maxLength="20"
            android:paddingStart="@dimen/edi_login_padding"
            android:paddingEnd="@dimen/edi_login_padding"
            android:textColor="@color/gray71"
            android:textColorHint="@color/grayBD"
            android:textSize="@dimen/edi_login_fontsize" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edi_login_height"
            android:layout_below="@+id/username"
            android:layout_marginTop="@dimen/edi_login_marginTop"
            android:background="@drawable/shape_background_rect_white_6"
            android:elevation="@dimen/edi_login_elevation"
            android:fontFamily="@font/medium"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="@dimen/edi_login_padding"
            android:paddingEnd="@dimen/edi_login_padding"
            android:textColor="@color/gray71"
            android:textColorHint="@color/grayBD"
            android:textSize="@dimen/edi_login_fontsize" />

        <include
            android:id="@+id/login"
            layout="@layout/layout_loading_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginTop="@dimen/edi_login_marginTop" />


    </RelativeLayout>

    <TextView
        android:id="@+id/copyRightTv"
        android:layout_alignParentBottom="true"
        style="@style/desktop_tv"
        android:text="@string/copyRight" />




</RelativeLayout>
</layout>
