<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/mainBackground"
        android:layout_height="@dimen/invSheetHeight">

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/serial_scan_top_bar_height"
            android:layout_alignParentTop="true"
            android:background="@color/gray91"
            android:padding="@dimen/padding_headers">

            <TextView
                android:id="@+id/title"
                style="@style/headers_title"
                android:text="@string/choose_customer" />


            <ImageView
                android:id="@+id/closeImg"
                style="@style/imgClose1" />


        </RelativeLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1"
            android:layout_margin="@dimen/marginTop5ForLayouts"
            android:background="@color/white"
            android:id="@+id/search_bar">
            <ImageView
                android:layout_width="@dimen/searchImg"
                android:layout_height="@dimen/searchImg"
                android:padding="@dimen/searchImgPadding"
                android:foreground="?attr/selectableItemBackground"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/png_search" />

            <EditText
                android:id="@+id/searchEdi"
                style="@style/searchMainEdi"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider_line"
            android:background="@color/black"
            android:layout_below="@id/search_bar"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_line"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/pattern_customer" />



        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/progressStyle"
            android:visibility="gone"
            android:padding="@dimen/paddingOfDialogProgress" />

    </RelativeLayout>
</layout>
