<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_background_rect_white_6"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/relWarehouse"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content">
            <TextView
                style="@style/pattern_putaway_smallTv"
                android:layout_marginStart="@dimen/marginStartLocationTransfer"
                android:text="@string/warehouseCode" />


            <TextView
                android:id="@+id/warehouseCode"
                style="@style/pattern_receieve_tv1"
                tools:text="@string/tools_a220820_023535" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop5ForLayouts"
            android:padding="@dimen/marginTop5ForLayouts"
            android:layout_below="@id/relWarehouse"
            android:layout_marginBottom="@dimen/edi_login_marginTop"
            android:id="@+id/rel0"
            android:elevation="@dimen/lowElevation"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    style="@style/pattern_putaway_smallTv"
                    android:layout_marginStart="@dimen/marginStartLocationTransfer"
                    android:text="@string/docCode" />


                <TextView
                    android:id="@+id/dockCode"
                    style="@style/pattern_receieve_tv1"
                    tools:text="@string/tools_a220820_023535" />


            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="0dp"
                android:layout_weight="1"
                app:switchMinWidth="@dimen/_45sdp"
                android:padding="@dimen/marginEndFilterRel"
                android:layout_height="wrap_content"
                android:id="@+id/use_switch"
                app:track="@drawable/tick"
                android:thumb="@drawable/circle"
                android:checked="true"/>

        </LinearLayout>
    </RelativeLayout>

</layout>